doctype html
html
  head
    meta(charset="utf-8")
    style.
      body {
        font-family: Arial, sans-serif;
        background: #f9fafb;
        padding: 20px;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        background: #fff;
        padding: 24px;
        border-radius: 8px;
        border: 1px solid #e5e7eb;
      }
      h1 {
        color: #0369a1;
        font-size: 20px;
        margin-bottom: 16px;
      }
      .section {
        margin-bottom: 12px;
      }
      .label {
        font-weight: bold;
        color: #374151;
      }
      .value {
        color: #111827;
      }
  body
    .container
      h1 Nuevo mensaje de contacto

      .section
        span.label Asunto:
        span.value #{subject}

      .section
        span.label Nombre:
        span.value #{name}

      .section
        span.label Rol:
        span.value #{role}

      .section
        span.label Correo:
        span.value #{email}

      .section
        span.label Telefono:
        span.value #{phone}

      .section
        span.label Mensaje:
        p.value #{detail}
